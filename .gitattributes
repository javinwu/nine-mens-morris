# Exclude generated/compiled files from language statistics
index.html linguist-generated=true
main.js linguist-generated=true
dist/** linguist-generated=true
public/** linguist-generated=true

# Exclude dependencies from language statistics
node_modules/** linguist-vendored
elm-stuff/** linguist-vendored

# Mark Elm as the primary language
*.elm linguist-language=Elm

# Mark CSS files properly (for Tailwind)
*.css linguist-language=CSS
